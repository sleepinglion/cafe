<%= form_with(model: product, local: true) do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :product_category_id %>
        <%= form.select :product_category_id,options_from_collection_for_select(ProductCategory.where(:branch_id=>current_admin.branch_id,:display=>true,:enable=>true).all, 'id', 'title',product.product_category_id),{},{:class=>"form-control"} %>
      </div>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, :class => "form-control", :required => "required" %>
      </div>
      <%= form.fields_for :product_picture do |pp| %>
      <div class="form-group">
        <%= pp.label :picture %>
        <%= pp.file_field :picture, :class => "form-control" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>