<article>
  <h3><%= t(:order) %></h3>
  <table class="table">
    <colgroup>
      <col/>
      <col/>
      <col/>
      <col style="width:90px"/>
    </colgroup>
    <thead>
    <tr class="thead-default">
      <th style="vertical-align:middle"><%= t(:product) %></th>
      <th style="vertical-align:middle" class="text-right"><%= t(:price) %></th>
      <th style="vertical-align:middle" class="text-center"><%= t(:quantity) %></th>
      <th id="cancel_s" class="text-center">
        <span id="cancel_all" class="btn btn-danger"><%= t(:cancel) %></span>
      </th>
    </tr>
    </thead>
    <tbody>
    <% unless order %>
      <%= order.fields_for :orders_products do |op| %>
        <tr class="order">
          <td>
            <%= op.hidden_field :product_id %>
            <%= op.hidden_field :quantity %>
            <%= op.product.title %>
          </td>
          <td class="price text-right">
            <%= op.hidden_field :price %>
            <span class="price_t"><%= op.price %></span>
          </td>
          <td class="text-center">
            <span class="btn btn-success plus">+</span>&nbsp;
            <span class="quantity"><%= op.quantity %></span>
            <span class="btn btn-warning minus">-</span>
          </td>
          <td class="text-right">
            <span class="btn btn-danger delete"><%= t(:cancel) %></span>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4" class="no_data"><%= t(:no_exists_order) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</article>