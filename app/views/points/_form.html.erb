<%= form_with(model: point, local: true) do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :user_id %>
        <%= form.select :user_id,options_from_collection_for_select(User.where(:branch_id=>current_admin.branch_id,:enable=>true).all, 'id', 'name',point.user_id),{},{:class=>"form-control"} %>
      </div>
      <div class="form-group">
        <%= form.label :point %>
        <%= form.number_field :point, :class => "form-control", :required => "required" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>