<%= form_with(model: operator, local: true) do |form| %>
  <div class="card">
    <div class="card-body">

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, :class => "form-control", :required => "required" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>