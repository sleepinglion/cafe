<header>
  <div id="header-top">
    <div class="container">
      <div class="row">
        <h1 class="col-12"><%=link_to t(:service_name),root_path %></h1>
        <ul id="top-menu">
          <% if(current_admin) %>
            <li><%= link_to edit_admin_registration_path do %><%=t(:welcome) %><% end %></li>
            <li>
              <%= link_to destroy_admin_session_path,:id=>"p_logout" do %>
                <i class="material-icons" style="font-size:35px;vertical-align:middle">highlight_off</i><span><%=t(:logout) %></span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_admin_session_path do %>
                <i class="material-icons">login</i><span><%=t(:login) %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div id="header-main">
        <nav id="main-menu" class="container">
          <ul class="nav">
            <li class="nav-item<% if ['orders'].include?(params[:controller]) %> active<% end %>">
              <%=link_to '#',:class=>"nav-link dropdown-toggle",:'data-toggle'=>"dropdown",:role=>"button",:'aria-haspopup'=>"true",:'aria-expanded'=>"false" do  %>
                <i class="material-icons">payment</i><span><%= t('activerecord.models.order') %></span>
              <% end %>
              <ul class="dropdown-menu">
                <li class="active">
                  <%=link_to new_order_path, :class=>"nav-link" do  %>
                    <i class="material-icons">local_cafe</i><span><%= t('activerecord.models.order') %></span>
                  <% end %>
                </li>
                <li>
                  <%=link_to orders_path, :class=>"nav-link" do  %>
                    <i class="material-icons">local_cafe</i><span><%= t(:search_order) %></span>
                  <% end %>
                </li>
              </ul>
            </li>
            <li class="nav-item<% if ['products','product_categories'].include?(params[:controller]) %> active<% end %>">
              <%=link_to '#', :class=>"nav-link dropdown-toggle",:'data-toggle'=>"dropdown",:role=>"button",:'aria-haspopup'=>"true",:'aria-expanded'=>"false" do  %>
              <i class="material-icons">local_cafe</i><span><%= t('activerecord.models.product') %></span>
              <% end %>
              <ul class="dropdown-menu">
                <li class="active">
                  <%=link_to products_path, :class=>"nav-link" do  %>
                  <i class="material-icons">local_cafe</i><span><%= t('activerecord.models.product') %></span>
                  <% end %>
                </li>
                <li>
                  <%=link_to product_categories_path, :class=>"nav-link" do  %>
                  <i class="material-icons">local_cafe</i><span><%= t('activerecord.models.product_category') %></span>
                  <% end %>
                </li>
              </ul>
            </li>
            <li  class="nav-item<% if ['accounts','accounts_products','accounts_product_categories'].include?(params[:controller]) %> active<% end %>">
              <%=link_to accounts_path,:class=>"nav-link" do  %>
                <i class="material-icons">attach_money</i><span><%= t('activerecord.models.account') %></span>
              <% end %>
            </li>
            <li class="nav-item<% if ['users'].include?(params[:controller]) %> active<% end %>">
              <%=link_to '#', :class=>"nav-link dropdown-toggle",:'data-toggle'=>"dropdown",:role=>"button",:'aria-haspopup'=>"true",:'aria-expanded'=>"false" do  %>
                <i class="material-icons">local_cafe</i><span><%= t('activerecord.models.user') %></span>
              <% end %>
              <ul class="dropdown-menu">
                <li class="active">
                  <%=link_to users_path, :class=>"nav-link" do  %>
                    <i class="material-icons">local_cafe</i><span><%= t('activerecord.models.user') %></span>
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
  </div>
</header>

